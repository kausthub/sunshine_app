<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kausthub.myapplication" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_sunshine"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.kausthub.myapplication.MainActivity"
            android:icon="@drawable/ic_launcher_sunshine"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.kausthub.myapplication.DetailedActivity"
            android:label="@string/title_activity_detailed"
            android:parentActivityName="com.example.kausthub.myapplication.MainActivity" >
        </activity>
        <activity
            android:name="com.example.kausthub.myapplication.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.example.kausthub.myapplication.MainActivity">
        </activity>
    </application>

</manifest>
